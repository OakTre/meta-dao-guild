  .reviews-list.gl-block.gl-block--grey#reviews-list-host
    .reviews-list__header
      h2.gl-title Reviews
      button.gl-btn-secondary(data-review-modal-open) Write a Review

    div(data-review-modal).review-modal__backdrop
      div.js-modal-container.review-modal__container
        button.review-modal__close-button(data-review-modal-close)
        div.js-modal-content.review-modal__content
          div.review-modal__header Write a review
          .review-modal__ratings
            .review-modal__rating-title Fun to play
            +stars("funToPlay")
            .review-modal__rating-title Earnings
            +stars("earnings")
            .review-modal__rating-title Affordability
            +stars("affordability")
            .review-modal__rating-title Easy to learn
            +stars("easyToLearn")
          form(data-review-form)
            div.review-modal__textarea-container
              textarea.review-modal__textarea(
                placeholder="Write your review"
                data-review-text
                data-required="Write your review"
                data-max-length="100;Review is too long"
              )
              span.review-modal__textarea-counter
                span(data-review-length-counter)
                span(data-review-length-limit)
            div.review-modal__textarea-error-text.mod-hide(data-review-error-message data-network-error="Couldn't submit review")
            div.review-modal__actions
              button(type="button" data-review-modal-cancel).review-modal__cancel-button Cancel
              button(type="submit").review-modal__submit-button Submit review
        div(data-curtain)


    ul.reviews-list__list
      .swiper.reviews-list__swiper-container.gl-swiper.swiper-container#js-swiper-container
        .gl-swiper__swiper-wrapper.swiper-wrapper
          each item in reviewsList
            li.reviews-list__item-wrapper.swiper-slide.js-swiper-slide
              button(type="button").reviews-list__item-repost.gl-mb-hide= item.repostNum
              .reviews-list__item-content
                .js-fix-content
                  .reviews-list__item-header
                    button(type="button").reviews-list__item-repost.gl-mb-show= item.repostNum
                    +rating(item.assessment)
                    .reviews-list__item-date-wrapper
                      .reviews-list__item-date-caption= item.dateCaption
                      .reviews-list__item-date= item.date

                  .reviews-list__item-title= item.title
                  .reviews-list__item-text= item.text
                .reviews-list__ratings-list-container.js-ratings-container
                  .reviews-list__ratings-list-wrapper.js-ratings-wrapper
                    each rating in item.ratingsList
                      .reviews-list__rating-item
                        .reviews-list__rating-title= rating.title
                        +rating(rating.rate)

                button(type="button").reviews-list__btn-more-less.js-btn-more
                  .js-btn-more-content
                    .reviews-list__btn-text-more View More
                    .reviews-list__btn-text-less View Less

        .gl-swiper__pagination-wrapper
          button.gl-swiper__pagination-btn-nav.gl-swiper__pagination-btn-nav--prev#js-btn-prev
          .reviews-list__swiper-pagination.gl-swiper__pagination.swiper-pagination#js-pagination-slider
          button.gl-swiper__pagination-btn-nav.gl-swiper__pagination-btn-nav--next#js-btn-next
